<div class="row">
  <div class="col s3 m2 l2">
    <img src={{model.largeAvatar}} class="responsive-img z-depth-1 circle">
  </div>
  <div class="col s9 m10 l6">
    <h4 class="">
      {{model.name}}
    </h4>
    {{#link-to "teams.show" model.team class=''}}
      {{ model.team.name }}
    {{/link-to}}
  </div>
</div>
<div class="divider"></div>

<ol>
{{#each model.steps as |step|}}
  <li>
    {{#if-includes list=step.completedBy obj=model}}
      {{step.title}}
    {{/if-includes}}
  </li>
{{/each}}
</ol>
