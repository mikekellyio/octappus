<%= simple_form_for([:admin, @admin_child]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :nickname %>
    <%= f.input :birthday, start_year: Date.today.year - 18, end_year: Date.today.year - 2 %>
    <%= f.association :team %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
